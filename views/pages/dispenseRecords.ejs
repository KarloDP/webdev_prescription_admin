<h1>All Dispense Records</h1>
<form method="get" action="/dispense-records" style="margin-bottom:16px;">
  <input type="text" name="prescriptionID" placeholder="Prescription ID" value="<%= prescriptionID || '' %>">
  <input type="text" name="medication" placeholder="Medication Name" value="<%= medication || '' %>">
  <input type="text" name="pharmacy" placeholder="Pharmacy Name" value="<%= pharmacy || '' %>">
  <button type="submit">Search</button>
</form>
<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th><th>Date Dispensed</th><th>Prescription ID</th>
      <th>Medication</th><th>Quantity</th><th>Pharmacy</th>
    </tr>
  </thead>
  <tbody>
    <% records.forEach(r => { %>
      <tr>
        <td><%= r.dispenseID %></td>
        <td><%= r.dispenseDate %></td>
        <td><%= r.prescriptionID %></td>
        <td><%= r.brandName %> / <%= r.genericName %></td>
        <td><%= r.dispensedQuantity %></td>
        <td><%= r.pharmacyName %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
<br><a href="/dashboard">Back to Dashboard</a>

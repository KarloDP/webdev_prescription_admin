<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Portal | Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/login.css">
</head>
<body>
  <div class="login-wrapper">
    <div class="login-card">
      
      <div class="login-header">
        <div class="header-logo">
          <img src="/pictures/Main_logo.png" alt="Company Logo" class="logo-img">
        </div>
        <h1>Admin Portal</h1>
        <p class="header-subtitle">Secure Access Control</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-error">
          <div class="alert-content">
            <strong>Error</strong>
            <p><%= error %></p>
          </div>
        </div>
      <% } %>

      <!-- Login Form -->
      <form class="login-form" action="/login" method="POST">
        <div class="form-group">
          <label class="form-label">Select Administrator</label>
          <select name="adminId" required>
            <option value="" disabled selected>-- Choose Account --</option>
            <% admins.forEach(admin => { %>
              <option value="<%= admin.adminID %>">
                <%= admin.firstName %> <%= admin.lastName %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label class="form-label">Password</label>
          <input type="password" name="password" required>
        </div>

        <button type="submit" class="btn btn-primary">
          <span class="btn-text">Login to Dashboard</span>
          <span class="btn-arrow">→</span>
        </button>
      </form>

      <a href="/register" class="btn btn-primary">
        <span class="btn-text">Register Admin</span>
        <span class="btn-arrow">→</span>
      </a>

      <div class="login-footer">
        <div class="security-badge">
          <span>Secure Connection • SSL Encrypted</span>
        </div>
        <div class="support-info">
          <a href="#" class="support-link">❓ Need Support?</a>
        </div>
        <div class="copyright">
          © <span id="currentYear"></span> Admin Portal • Version 2.1
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('currentYear').textContent = new Date().getFullYear();
  </script>
</body>
</html>
